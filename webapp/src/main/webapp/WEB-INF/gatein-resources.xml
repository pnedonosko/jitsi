  <!-- Javascript for Jitsi support in Platform -->
  <module>
    <name>jqueryPnotify</name>
    <load-group>jitsiGRP</load-group>
    <script>
      <path>/js/jquery.pnotify.min.js</path>
    </script>
    <depends>
      <module>jquery</module>
      <as>jQuery</as>
    </depends>
  </module>
  <module>
    <name>jqueryUI</name>
    <as>jqueryUI</as>
    <load-group>jitsiGRP</load-group>
    <script>
      <path>/js/jquery-ui.min.js</path>
    </script>
    <depends>
      <module>jquery</module>
      <as>jQuery</as>
    </depends>
  </module>
  <module>
    <name>jitsiMeet</name>
    <load-group>jitsiGRP</load-group>
    <script>
      <path>/js/jitsi-meet.js</path>
    </script>
    <depends>
      <module>jquery</module>
    </depends>
    <depends>
      <module>jqueryPnotify</module>
    </depends>
    <depends>
      <module>jqueryUI</module>
    </depends>
  </module>
  
  <module>
    <name>jitsi</name>
    <load-group>jitsiGRP</load-group>
    <script>
      <path>/js/jitsi.js</path>
    </script>
  </module>
  
