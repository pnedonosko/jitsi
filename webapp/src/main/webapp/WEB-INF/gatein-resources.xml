   <javascript>
    <param>
      <js-module>JitsiPlugin</js-module>
      <js-path>/js/JitsiPlugin.js</js-path>
    </param>
  </javascript>
  <!-- CSS for MyConnector Calls support in Platform -->
  <portlet-skin>
    <application-name>jitsi</application-name>
    <portlet-name>JitsiPortlet</portlet-name>
    <skin-name>Default</skin-name>
    <css-path>/skin/jitsi-default.css</css-path>
    <overwrite>true</overwrite>
    <css-priority>1</css-priority>
  </portlet-skin>
  <portlet-skin>
    <application-name>jitsi</application-name>
    <portlet-name>JitsiPortlet</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/skin/jitsi-enterprise.css</css-path>
    <overwrite>true</overwrite>
    <css-priority>1</css-priority>
  </portlet-skin>
  
  <module>
    <name>webConferencing_jitsi</name>
    <load-group>webConferencingMyGRP</load-group>
    <script>
      <path>/js/webconferencing-jitsi.js</path>
    </script>
    <depends>
      <module>jquery</module>
    </depends>
    <depends>
      <module>webConferencing</module>
    </depends>
  </module>
  <module>
    <name>Jitsi</name>
    <script>
      <path>/js/Jitsi.bundle.js</path>
    </script>
    <depends>
      <module>webConferencing</module>
    </depends>
    <depends>
      <module>vue</module>
    </depends>
    <depends>
      <module>vuetify</module>
    </depends>
    <depends>
      <module>eXoVueI18n</module>
    </depends>
    <depends>
      <module>extensionRegistry</module>
    </depends>
  </module>
